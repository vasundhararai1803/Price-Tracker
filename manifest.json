{
  "manifest_version": 3,
  "name": "Price Tracker",
  "version": "1.1",
  "description": "Track product prices on Amazon and Flipkart",
  "permissions": ["storage", "notifications", "alarms", "activeTab", "scripting"],
  "host_permissions": ["https://www.amazon.in/*", "https://www.flipkart.com/*", "https://www.myntra.com/*", "https://www.ajio.com/*", "https://www.nykaa.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
